{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "stripInternal": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "tests", "dist", "node_modules"]
}
