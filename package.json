{
  "name": "scl-emulator",
  "version": "0.1.0",
  "private": true,
  "description": "Core Siemens SCL emulator toolkit with parsing and execution primitives.",
  "type": "module",
  "scripts": {
    "antlr:generate": "rimraf src/generated && antlr-ng -Dlanguage=TypeScript -v true -l false -o src/generated Siemens-SCL-Antlr-Grammar/scl.g4",
    "prebuild": "pnpm run antlr:generate",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "pnpm run antlr:generate",
    "test": "vitest run",
    "prelint": "pnpm run antlr:generate",
    "lint": "eslint ."
  },
  "keywords": [
    "scl",
    "plc",
    "emulator",
    "antlr",
    "parser"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "antlr4ng": "^3.0.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^22.18.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "antlr-ng": "^1.0.10",
    "eslint": "^9.38.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
